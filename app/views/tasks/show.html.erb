<div class="container">
  <div class="header">
    <h1><%= @task.title %></h1>
    <%= link_to edit_task_path, class: "btn btn-danger m-3" do%>
      <i class="fa-solid fa-pencil"></i> Edit this task
    <% end%>
  </div>
  <p class="details"><%= @task.details %></p>
  <div class="checked">
    <% if @task.completed %>
      <p><i class="fa-solid fa-square-check"></i> This task is completed</p>
    <% else %>
      <p><i class="fa-solid fa-square"></i> This task is not completed yet</p>
    <% end %>
  </div>
  <%= link_to tasks_path, class: "btn btn-primary"  do%>
    <i class="fa-solid fa-rotate-left"></i> Back to list
  <% end%>
</div>
