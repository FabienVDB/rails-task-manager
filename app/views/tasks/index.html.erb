<div class="container">
  <h1>Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="fa-solid fa-square-check"></i>
        <% else %>
          <i class="fa-solid fa-square"></i>
        <% end %>

        <%= link_to task.title, task_path(task)  %>
        <%= link_to "", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "fa-solid fa-trash-can" %>
      </li>
    <% end %>
  </ul>
  <%= link_to new_task_path, class: "btn btn-primary" do%>
    <i class="fa-solid fa-plus"></i> Add a new task
  <% end%>

</div>
